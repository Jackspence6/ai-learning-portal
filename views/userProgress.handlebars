<h1>{{user.name}}'s Performance Overview</h1>
<div id="progress-container">
    <div class="card performance-card">
        <div class="card-content">
            <table>
                <thead>
                    <tr>
                        <th>Quiz ID:</th>
                        <th>Quiz Topic:</th>
                        <th>Activity Status:</th>
                        <th>Quiz Score:</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each quizzesData}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.topic}}</td>
                        <td>{{this.progressStatus}}</td>
                        <td>{{this.quizScore}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>